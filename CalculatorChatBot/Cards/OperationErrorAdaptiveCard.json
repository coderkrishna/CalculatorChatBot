{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "horizontalAlignment": "Center",
          "separator": true,
          "weight": "Bolder",
          "color": "Good",
          "text": "%errorCardTitleText%"
        },
        {
          "type": "TextBlock",
          "text": "%operationTypeText%"
        },
        {
          "type": "TextBlock",
          "spacing": "Small",
          "text": "%inputLineText%"
        },
        {
          "type": "TextBlock",
          "spacing": "Small",
          "text": "%outputResultText%"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}